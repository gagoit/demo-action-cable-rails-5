<div id="chat-rooms-page">
  <p id="notice"><%= notice %></p>

  <h1>Chat Rooms</h1>

  <table class="chat-rooms-table">
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @chat_rooms.each do |chat_room| %>
        <tr>
          <td class="topic"><%= link_to chat_room.topic, chat_room %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Chat Room', new_chat_room_path %>
</div>
