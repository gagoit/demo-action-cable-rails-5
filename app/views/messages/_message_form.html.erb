<%=form_for message, remote: true, authenticity_token: true, format: :json do |f|%>
  <%= f.label :your_message%>:
  <%= f.text_area :content, class: "form-control", data: {textarea: "message"}, "data-behavior" => "room_speaker" %>

  <%= f.hidden_field :chat_room_id, value: chat_room.id %>
  <%= f.submit "send", class: "btn btn-primary", data: {send: "message"}%>
<%end%>